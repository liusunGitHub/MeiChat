<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:paddingTop="@dimen/padding_top">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarcc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人主页"
            android:layout_gravity="center"
            android:textColor="#424242"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/toolbar_menu_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:textColor="#424242"
            android:textSize="12sp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/user_ic_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/_90009900"
        android:gravity="center_vertical"
        android:padding="20dp">


        <com.guosun.meichat.view.CircleImageView
            android:id="@+id/user_ic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            app:border_color="@android:color/white"
            app:border_width="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_ic_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="guosun"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textColor="#333333"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="编辑个人资料"
            android:paddingRight="10dp"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>